<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_margin_right"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@id/rl_main_menu">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_margin_top"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_margin_top"
        android:background="@drawable/rectangle_rounded">

        <RadioGroup
            android:id="@+id/radio_group_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_filter_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="-5dp"
                android:paddingStart="20dp"
                android:text="All" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_filter_Hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="-5dp"
                android:paddingStart="20dp"
                android:text="Per Hour" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_filter_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="-5dp"
                android:paddingStart="20dp"
                android:text="Per Day" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_filter_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="20dp"
                android:text="Per Month" />

        </RadioGroup>

    </RelativeLayout>
</RelativeLayout>