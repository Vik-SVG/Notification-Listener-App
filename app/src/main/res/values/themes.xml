<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotificationListenerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/darker_grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>

        <item name="materialButtonStyle">@style/mButton</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>


    </style>

    <style name="popup_window_animation_custom">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="CustomPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="popupMenuBackground">@color/black</item>
        <item name="android:popupBackground">@color/black</item>

        <item name="android:itemBackground">@color/black</item>

       <!-- <item name="android:popupEnterTransition">
            @transition/fade
        </item>-->


    </style>

    <style name="ActionBarStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter_ntf</item>
    </style>

    <style name="mButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:backgroundTint">@color/black</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

</resources>